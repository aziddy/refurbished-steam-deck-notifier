# Directory for CSV log files (leave empty to disable logging)
CSV_DIR=/app/logs

# Country code for Steam API (e.g., DE, US, UK, FR)
COUNTRY_CODE=CA

# Discord webhook URL for notifications
WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Path to role mapping JSON file (leave empty if not using role pings)
# If using role mapping, uncomment the volume mount in docker-compose.yml
ROLE_MAPPING=

# Check interval in minutes (how often to check for availability)
CHECK_INTERVAL_MINUTES=5
